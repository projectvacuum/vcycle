import os
import sys

from vcycle.core import shared
from vcycle.core import vacutils

# Tell logLine to write to sys.stderr to avoid corrupting the
# stdout stream we return to the web server
vacutils.logToStderr()

try:
  shared.readConf(updatePipes = False)
except:
  print 'Status: 500 Internal Server Error (1)'
  print
  sys.exit(0)

try:
  (machinesDirectory, hostName, subDirectory, fileName) = os.environ['REQUEST_URI'].replace('//','/').split('/')[1:5]
except:
  print 'Status: 404 Not Found'
  print
  sys.exit(0)

if (machinesDirectory != 'machines' or
    subDirectory != 'joboutputs' or
    not os.path.isdir('/var/lib/vcycle/machines/' + hostName + '/joboutputs')):
  print 'Status: 404 Not Found'
  print
  sys.exit(0)

try:
  spaceName  = open('/var/lib/vcycle/machines/' + hostName + '/space_name',  'r').read()
  machinetypeName = open('/var/lib/vcycle/machines/' + hostName + '/machinetype_name', 'r').read()
except:
  print 'Status: 500 Internal Server Error (2)'
  print
  sys.exit(0)

if ('SSL_CLIENT_S_DN' not in os.environ or
    spaceName not in shared.spaces or
    machinetypeName not in shared.spaces[spaceName].machinetypes or
    not hasattr(shared.spaces[spaceName].machinetypes[machinetypeName], 'x509dn') or
    os.environ['SSL_CLIENT_S_DN'] != shared.spaces[spaceName].machinetypes[machinetypeName].x509dn):
  print 'Status: 403 Forbidden'
  print
  sys.exit(0)

try:
  f = open('/var/lib/vcycle/machines/' + hostName + '/joboutputs/' + fileName, 'w')
  f.write(sys.stdin.read())
  f.close()
except:
  print 'Status: 500 Internal Server Error (3)'
  print
else:
  print 'Status: 200 OK'
  print
